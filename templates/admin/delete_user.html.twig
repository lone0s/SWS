{% extends 'base.html.twig' %}

{% block title %}CBD DEALERZZZ - Utilisateurs{% endblock %}

{% block page %}
    <div class="tab">
        <h2>Liste de tous les utilisateurs</h2>
        <table>
            <tr>
                <th>id</th>
                <th>login</th>
                <th>mot de passe</th>
                <th>prenom</th>
                <th>nom</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.login }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td><a href="{{ path ('admin_delete_user', { 'id' : user.id } ) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
